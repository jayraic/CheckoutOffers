<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/offer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_size_margin"
        android:layout_marginStart="@dimen/standard_size_margin"
        android:textColor="@android:color/black"
        android:textSize="@dimen/standard_text_size"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="@+id/offer_cashback"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/offer_cashback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/standard_text_size"
        android:gravity="center"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginStart="@dimen/standard_size_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/offer_name"
        android:layout_marginBottom="@dimen/standard_size_margin"
        app:layout_constraintRight_toRightOf="@+id/offer_name"
        app:layout_constraintHorizontal_bias="0.0" />
    <ImageView
        android:id="@+id/offer_image"
        android:layout_width="@dimen/offer_image_width_height"
        android:layout_height="@dimen/offer_image_width_height"
        android:layout_marginEnd="@dimen/standard_size_margin"
        app:layout_constrainedWidth="true"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/standard_size_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/standard_size_margin"
        android:layout_marginStart="@dimen/standard_size_margin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/offer_name"
        app:layout_constraintHorizontal_bias="1.0"
        android:contentDescription="@string/thumbnail_content_description" />
</androidx.constraintlayout.widget.ConstraintLayout>